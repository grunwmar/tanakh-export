<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
"http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>{{title}}</title>
  <style>
    {%- for style in styles -%}
      {{ style }}
    {%- endfor -%}
  </style>
</head>
<body>
  <div class="face">
    <h1 lang="he" style="font-size: 2em !important; margin-top: 2.5em;">{{title}}</h1>
    <div class="langlist">
      {%- for langcode in languages -%}
      <div lang="{{ langcode }}">{{langcode | langname | yiddish_letters }}</div>
      {%- endfor -%}
    </div>
  </div>
  <hr style="visibility: hidden;" />
  {%- for i in range(book_length) -%}
    {%- set chapter_index = i + 1 -%}
    {%- set chapter_length = books[0][i] | count() -%}
      <h2 lang="he">{{ chapter_index }} ∙ {{ chapter_index | hebrew_index }}</h2>
      {%- for j in range(chapter_length) -%}
        {%- set verse_index = j + 1 -%}
        {%- set lang_num = books | count() -%}
        <table>
        {%- for k in range(lang_num) -%}
          {%- if books[k][i] | count() != 0  -%}
            {%- set lang = languages[k] -%}
            <tr>
              <td class="l-index index-rowlang-{{ lang }}">
                {%- if k == 0 -%}
                  {{ verse_index }}
                {%- else -%}
                {%- endif -%}
              </td>
              <td lang="{{ lang }}" class="row_{{ k + 1 }} text">
                {{ books[k][i][j] | yiddish_letters | subs_brackets_he | subs_brackets  }}
              </td>
              <td class="r-index index-rowlang-{{ lang }}">
                {%- if k == 0 -%}
                  {{ verse_index | hebrew_index }}
                {%- else -%}
                {%- endif -%}
              </td>
            </tr>
          {%- endif -%}
        {%- endfor -%}
        </table>
      {%- endfor -%}
      <div class="endbar">―</div>
  {%- endfor -%}
</body>
</html>
